{
  "name": "verkefni",
  "version": "1.0.0",
  "scripts": {
    "sass": "sass --watch styles/main.scss:css/style.css",
    "sync": "browser-sync start --server --files 'css/*.css, *.html'",
    "lint": "stylelint 'css/**/*.css'",
    "dev": "concurrently \"npm run sass\" \"npm run sync\""
  },
  "devDependencies": {
    "sass": "^1.32.0",
    "browser-sync": "^2.26.13",
    "stylelint": "^13.7.0",
    "stylelint-config-standard": "^21.0.0",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "concurrently": "^5.3.0"
  }
}
